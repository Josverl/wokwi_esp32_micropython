// Note that this launch.json file spins up a c debugger, NOT a micropython one.
// I think you can probably get the pdb debugger running correctly through the wokwi terminl,
// but I'm just not gonna figure that out right now.
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wokwi GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/firmware/esp32-20220618-v1.19.1.elf",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/opt/esp/tools/xtensa-esp-elf-gdb/12.1_20221002/xtensa-esp-elf-gdb/bin/xtensa-esp32-elf-gdb",
            "miDebuggerServerAddress": "localhost:3333"
        },
        {
            "name": "pico-w",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "tools/pico-w.bin",
            ],
            "justMyCode": true,
        },
        {
            "name": "uf2conv",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "D:\\repos\\wokwi_esp32_micropython\\firmware\\rp2-pico-20230426-v1.20.0.uf2",
                "--info"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "CPython: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "args": [
                // "info",
                "merge",
                "firmware\\rp2-pico-20230426-v1.20.0.uf2",
                // "firmware\\SEEED_WIO_TERMINAL-20230426-v1.20.0.uf2",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "tools.vfs_merge",
            "justMyCode": true
        },
    ]
}